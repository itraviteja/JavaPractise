package programs;

public class ConsicutiveProduct 
{
	public String ConProduct(String number)
	{
		long n = 0;    
        long pro = 0;
        long X = 0; 
        int count=0;
        //System.out.println(number.length());
        for ( int i=0; i < number.length()-2; i++)  
        {
       	 X=1;
       	 //System.out.println("I"+i);
       	 count=1;
            for(int j=0; j<3; j++)
            {
                //System.out.println("J"+j);
           	 if(X == 0)
                {
                    X = 1;
                }
                char c = number.charAt(i+j);
                
                n = Character.getNumericValue(c);
                //System.out.println("N"+n);
                
                X=X*n;
                
                //System.out.println("cnt"+count);
                if(pro<X)
                {
               	 pro=X;
               	 if(count==3)
               	 {
               		System.out.println("the highest productive number is"+number.charAt(i+j-2)+number.charAt(i+j-1)+number.charAt(i+j)); 
               	 }
               }count++;
            }
        }
        System.out.println("product is"+pro);


		return null;
		
	}

}

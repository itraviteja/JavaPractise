        int n=5;
        int space=(2*n)-1;
        for(int i=1;i<(2*n)-1;i++)
        {
        	for(int j=1;j<=n-i;j++)
        	{
        		System.out.print(" ");
        	}
        	for(int j=1;j<=2*i-1;j++)
        	{
        		System.out.print("*");
        	}System.out.println();
        }
        for(int i=n-1;i>0;i--)
        {
        		for(int j=1;j<=n-i;j++)
        		{
                        System.out.print(" ");
                 }
               for(int j=1;j<=i*2-1;j++)
               {
                        System.out.print("*");
                }
               System.out.println();
        }  
	}
